---
interface QnAItem {
  question: string;
  answer: string;
}

interface Props {
  items: QnAItem[];
}

const { items } = Astro.props;
---

<div class="space-y-3 my-8">
  {items.map((item) => (
    <details class="group border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden">
      <summary class="cursor-pointer px-5 py-4 bg-white dark:bg-[#1e1e1e] hover:bg-gray-50 dark:hover:bg-[#2a2a2a] transition-colors list-none flex items-start">
        <span class="mr-3 text-gray-400 group-open:rotate-90 transition-transform duration-200">â–¶</span>
        <span class="font-medium text-gray-900 dark:text-gray-100 flex-1">{item.question}</span>
      </summary>
      <div class="px-5 py-4 bg-gray-50 dark:bg-[#252525] border-t border-gray-200 dark:border-gray-700">
        <p class="text-gray-700 dark:text-gray-300 leading-relaxed">{item.answer}</p>
      </div>
    </details>
  ))}
</div>
